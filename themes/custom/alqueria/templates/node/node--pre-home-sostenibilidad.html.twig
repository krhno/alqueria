<section class="sustainability-banner if-img-video">
	<div class="containerr padding0">
		<div class="content">
			<div class="c-sustainability-banner">
				<div class="banner video">
					<div class="img-banner">
						{{ content.field_banner }}
					</div>
          			{% if node.field_id_video_youtube.value is not empty %}
			            {% if 'https://youtu.be/' in node.field_id_video_youtube.value %}
			              	{% set codigo=node.field_id_video_youtube.value|replace({'https://youtu.be/':''}) %}
			            {% elseif 'https://www.youtube.com/watch?v=' in node.field_id_video_youtube.value %}
			              	{% set codigo=node.field_id_video_youtube.value|replace({'https://www.youtube.com/watch?v=':''}) %}
			            {% endif %}
			            <div class="video-banner" data-src="https://www.youtube.com/embed/{{codigo}}">
			              	<iframe width="100%" height="100%" class="iframe-yt" src="" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			            </div>
	            		<div class="icon-play">
				            <span>
				              	<i class="demo-icon icon-icon-play">&#xe80d;</i>
				            </span>
	            		</div>
          			{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="sustainability-ancles">
	<div class="containerGrid">
		<div class="content">
			<div class="c-header">
				<h1>{{ node.title.value }}</h1>
			</div>
			<div class="c-sustainability-ancles">
				<div class="s-slider-sust-ancles owl-dots-gray owl-nav-icons2 owl-carousel owl-theme">
					{% for item in node.field_menu %}
						<div class="item">
							<a href="{{ item.entity.field_ancla_home.value }}" class="btn-anchor">{{ item.entity.name.value }}</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>

<section id="prehome-sustainability-1" class="banner-text-img4">
	<div class="containerGrid padding">
		<div class="content">
			<div class="c-header">
				<p>{{ node.field_descripcion.value }}</p>
			</div>
			{{ content.field_bloque_imagen }}
		</div>
	</div>
</section>

<section id="prehome-sustainability-2" class="slider-axes sustainability">
	<div class="containerGridp">
		<div class="content">
			<div class="c-header">
				<h2>{{ node.field_titulo_seccion_datos.value }}</h2>
				<p>{{ node.field_descripcion_seccion_datos.value }}</p>
			</div>
			<div class="c-slider-axes">
				<div class="s-slider-axes owl-dots-gray ownode.field_menul-nav-icons2 owl-carousel owl-theme">
					{% set cols = 3 %}
					{% for row in node.field_datos_alqueria %}
						{% if loop.index0 % cols == 0 %}
							<div class="items">
							{% endif %}
							<div class="item">
								<div class="img">
									<picture>
										<img data-src="{{ file_url(row.entity.field_icono.entity.fileuri) }}" alt="{{ row.entity.field_icono.entity.alt }}" title="{{ row.entity.field_icono.entity.alt }}" class="lazyload">
									</picture>
								</div>
								<div class="info">
									<h3>{{ row.entity.field_titulo.value }}</h3>
									<p>{{ row.entity.field_descripcion_corta.value }}</p>
								</div>
							</div>
							{% if (loop.index0 % cols == cols - 1 or loop.last) %}
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="slider-timeline">
	<div class="containerGrid">
		<div class="content">
			<div class="c-slider-timeline">
				<div class="slider-desktop">
					<div class="barProgress">
						<div class="start-barProgress"></div>
						<div class="reset-barProgress"></div>
					</div>
					<div class="s-slider-timeline desktop owl-dots-gray owl-nav-icons2 owl-carousel owl-theme">
						{% set cols = 6 %}
						{% for row in node.field_linea_de_tiempo %}
							{% if loop.index0 % cols == 0 %}
								<div class="items">
								{% endif %}
								<div class="item">
									<span>{{ row.entity.field_anno.value }}</span>
									<div class="text">
										<p>{{ row.entity.field_descripcion_ano.value }}</p>
									</div>
								</div>
								{% if (loop.index0 % cols == cols - 1 or loop.last) %}
								</div>
							{% endif %}
						{% endfor %}
					</div>
				</div>
				<div class="slider-mobile">
					<div class="barProgress">
						<div class="start-barProgress-left"></div>
						<div class="start-barProgress-right"></div>
						<div class="reset-barProgress"></div>
						<div class="reset-barProgress-left"></div>
						<div class="reset-barProgress-right"></div>
					</div>
					<div class="s-slider-timeline mobile owl-dots-gray owl-nav-icons2 owl-carousel owl-theme"></div>
				</div>
			</div>
		</div>
	</div>
</section>

