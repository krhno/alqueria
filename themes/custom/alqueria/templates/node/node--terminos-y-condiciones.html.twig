<section class="terms-conditions if-img-video">
  <div class="containerGridp">
    <div class="content">
      <div class="c-header">
        <h1>{{node.label}}</h1>
        {{node.body.value|raw}}
      </div>
      <div class="c-terms-conditions">
        <div class="banner-video">
          <div class="banner {% if node.field_url_youtube is not empty %}video{%else%}img{%endif%}">    
            <div class="img-banner">
              {{content.field_foto_principal}}
            </div>      
            {% if node.field_url_youtube is not empty %}              
            {% if 'https://youtu.be/' in node.field_url_youtube.value %}
            {% set codigo=node.field_url_youtube.value|replace({'https://youtu.be/':''}) %}
            {% elseif 'https://www.youtube.com/watch?v=' in node.field_url_youtube.value %}
            {% set codigo=node.field_url_youtube.value|replace({'https://www.youtube.com/watch?v=':''}) %}
            {% endif %}
            <div class="video-banner" data-src="https://www.youtube.com/embed/{{codigo}}">
              <iframe width="100%" height="100%" class="iframe-yt" src="" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <div class="icon-play">
              <span>
                <i class="demo-icon icon-icon-play">&#xe80d;</i>
              </span>
            </div>                    
            {% endif %}
            <div class="layer layer-black"></div>
          </div>
          <div class="copy front-18">
            <span>{{node.field_titulo_a_mostrar.value}}</span>
          </div>
        </div>
        <div class="info">
          {{node.field_descripcion_inferior.value|raw}}
        </div>
      </div>
    </div>
  </div>
</section>

<section class="download-list">
  <div class="containerGridp">
    <div class="content">
      <div class="c-download-list">
        {% for item in node.field_documentos %}
          <article class="item item-term {% if loop.index > 8 %}hidden{% endif %}">
            <div class="img">            
              {{content.field_documentos[loop.index-1]}}
            </div>
            <div class="info">
              <div class="icon">
                <i class="demo-icon icon-icon-pdf">&#xe823;</i>
              </div>
              <div class="text">
                <h3 class="titleHeight">{{item.entity.field_titulo.value}}</h3>
                <a href="{{item.entity.field_enlace.0.url}}" target="_blank" class="btn-link" data-seo="btn-content">{{item.entity.field_enlace.title}}</a>
              </div>
            </div>
          </article>
        {% endfor %}      
      </div>
      {% if node.field_documentos|length > 8 %}
        <div class="c-bottom">
          <span class="btn-link load-more-term" data-seo="btn-content">Cargar m√°s</span>
        </div>
      {% endif %}
    </div>
  </div>
</section>
