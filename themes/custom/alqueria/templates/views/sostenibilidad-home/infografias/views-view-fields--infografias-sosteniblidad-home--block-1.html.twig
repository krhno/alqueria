{%
  set classes = [
  'view',
  'view-' ~ id|clean_class,
  'view-id-' ~ id,
  'view-display-id-' ~ display_id,
  dom_id ? 'js-view-dom-id-' ~ dom_id,
]
%}
<article class="article-sustainability">
  <div class="img">
    <a href="{{fields.view_node.content}}" data-seo="btn-content">
      {{fields.field_fotos.content}}
    </a>
  </div>
  <div class="info">
    {% if fields.field_imagen_lanzamiento.content is not empty %}
      <div class="icon">
        <picture>
          {{fields.field_imagen_lanzamiento.content}}
        </picture>
      </div>
    {% endif %}
    <div class="text {% if fields.field_imagen_lanzamiento.content is empty %}no-img{% endif %}">
      <h3 class="titleHeight"><a href="{{fields.view_node.content}}" data-seo="btn-content">{{fields.title.content}}</a></h3>
      <p class="textHeight">{{fields.field_copy_truco_del_chef.content}}</p>
      <a href="{{fields.view_node.content}}" class="btn-link" data-seo="btn-content">Leer m√°s</a>
    </div>
  </div>
</article>
