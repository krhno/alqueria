  {%
    set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    ]
    %}
    <article class="item">
      <div class="img">
        <picture>
          {{fields.field_imagen_de_fondo_mobile.content}}
        </picture>
      </div>
      <div class="info">
        <h3 class="titleHeight">{{fields.title.content}}</h3>
        <p class="textHeight">{{fields.field_descripcion_corta.content}}</p>
        <table class="table tableHeight">
          <tbody>
            {% for item in row._entity.field_elementos_a_comparar %}
              <tr>
                <th>{{item.entity.field_titulo.value}}</th>
                <td>{{item.entity.field_subtitulo.value}}</td>                        
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <div class="button">
         <a href="{{fields.view_node.content}}" class="btn-link" data-seo="btn-content">Ir al producto</a>
        </div>
      </div>
    </article>
    